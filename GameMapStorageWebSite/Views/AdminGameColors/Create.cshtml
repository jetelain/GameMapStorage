@model GameMapStorageWebSite.Entities.GameColor

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>GameColor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EnglishTitle" class="control-label"></label>
                <input asp-for="EnglishTitle" class="form-control" />
                <span asp-validation-for="EnglishTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Aliases" class="control-label"></label>
                <input name="Aliases" value="@string.Join(';',Model.Aliases ?? [])" class="form-control" />
                <span asp-validation-for="Aliases" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hexadecimal" class="control-label"></label>
                <input asp-for="Hexadecimal" class="form-control" />
                <span asp-validation-for="Hexadecimal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContrastHexadecimal" class="control-label"></label>
                <input asp-for="ContrastHexadecimal" class="form-control" />
                <span asp-validation-for="ContrastHexadecimal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usage" class="control-label"></label>
                <select asp-for="Usage" class="form-control" asp-items="@Html.GetEnumSelectList<ColorUsage>()"></select>
                <span asp-validation-for="Usage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameId" class="control-label"></label>
                <select asp-for="GameId" class ="form-control" asp-items="ViewBag.GameId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
