@{
    ViewData["Title"] = "Create a layer from a package";
}

<h1>Create a layer from a package</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateFromPackage" enctype="multipart/form-data">
            <div class="form-group">
                <label for="package" class="control-label">Package file</label>
                <input id="package" name="package" type="file" class="form-control form-control-file" required="required" />
                <span class="text-danger">@ViewBag.UploadError</span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create layer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
