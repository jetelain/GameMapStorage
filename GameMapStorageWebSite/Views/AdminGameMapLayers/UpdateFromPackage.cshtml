@model GameMapStorageWebSite.Entities.GameMapLayer
@{
    ViewData["Title"] = "Update a layer from a package";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="AdminGames" asp-action="Details" asp-route-id="@Model.GameMap!.GameId">@Model.GameMap!.Game!.EnglishTitle</a></li>
        <li class="breadcrumb-item"><a asp-controller="AdminGameMaps" asp-action="Details" asp-route-id="@Model.GameMapId">@Model.GameMap!.EnglishTitle</a></li>
        <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.GameMapLayerId">@Html.DisplayFor(model => model.Type)</a></li>
        <li class="breadcrumb-item active" aria-current="page">Update</li>
    </ol>
</nav>

<h1>Update layer from a package</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateFromPackage" enctype="multipart/form-data" asp-route-id="@Model?.GameMapLayerId">
            <input type="hidden" asp-for="GameMapLayerId" />
            <div class="form-group">
                <label for="package" class="control-label">Package file</label>
                <input id="package" name="package" type="file" class="form-control form-control-file" required="required" />
                <span class="text-danger">@ViewBag.UploadError</span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update layer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
